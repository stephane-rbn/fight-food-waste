{% extends 'base.html.twig' %}

{% block title %}Forgot password{% endblock %}

{% block body %}

    <h1>Request password reset</h1>

    <form action="/password/request-reset" method="POST">

        <div class="form-group">
            <label for="inputEmail">Email address</label>
            <input type="email" class="form-control" id="inputEmail" name="email" placeholder="Email address" autofocus required>
        </div>

        <button type="submit" class="btn btn-primary">Send password reset</button>

    </form>

{% endblock %}
